<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
        <File name="errorfile" fileName="/opt/htdocs/logs//error.log" append="true">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="moxian-quartZ" fileName="/opt/htdocs/logs/moxian-quartZ.log" append="true">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="springframework" fileName="/opt/htdocs/logs/logs/springframework.log" append="true">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="hibernate" fileName="/opt/htdocs/logs/hibernate.log" append="true">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
    </appenders>
    <loggers>
        <root level="INFO">
            <appender-ref ref="console"/>
        </root>
         <root level="ERROR">
            <appender-ref ref="errorfile"/>
        </root>
        <logger name="org.springframework" level="INFO">
            <appender-ref ref="springframework"/>
        </logger>
        <logger name="org.hibernate.SQL" level="INFO">
            <appender-ref ref="hibernate"/>
        </logger>
        <logger name="com.moxian" level="DEBUG">
            <appender-ref ref="moxian-quartZ"/>
        </logger> 
    </loggers>
</configuration>